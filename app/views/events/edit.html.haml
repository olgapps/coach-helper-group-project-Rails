.content
  .content2nd
    %h1.event Edit Event data 
    = bootstrap_form_for @event, url: {action: 'update'} do |f|
      %tr  
        %tr
          .form-group
            #datetimepicker4.input-group.date{"data-target-input" => "nearest"}
              -# %input.form-control.datetimepicker-input{"data-target" => "#datetimepicker4", :type => "text"}/
              =f.text_field(:event_date, class: "form-control datetimepicker-input", data: {target:"#datetimepicker4"})
              .input-group-append{"data-target" => "#datetimepicker4", "data-toggle" => "datetimepicker"}
                .input-group-text.baczek
                  Pick date
                  %i.fa.fa-calendar
          :javascript
            $(function () {
                $('#datetimepicker4').datetimepicker({
                    format: 'L',
                    format: 'YYYY-MM-DD'
                });
            });
        %tr
          .field
            = f.text_field :opponent, class: "col-md-3 control-label"
 
        
      = f.submit "Update", class: "baczek"
      = button_to 'Back', events_path, class: "baczek"
      
