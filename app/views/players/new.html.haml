.content
  .content2nd
    %h1.players Create a new player
    = bootstrap_form_for @player do |f|
      .field.plej
        = f.text_field :name, class: "col-md-3 control-label.player" 
      .field.plej
        = f.text_field :surname, class: "col-md-3 control-label.player"
      .field.pley
        = f.text_field :number, class: "col-md-3 control-label.player"
      #datetimepicker4.input-group.date{"data-target-input" => "nearest"}
        =f.text_field(:birth_date, class: "form-control datetimepicker-input", data: {target:"#datetimepicker4"})
        .input-group-append{"data-target" => "#datetimepicker4", "data-toggle" => "datetimepicker"}
          .input-group-text.baczek
            Pick date
            %i.fa.fa-calendar
      :javascript
        $(function () {
            $('#datetimepicker4').datetimepicker({
                format: 'L',
                format: 'YYYY-MM-DD'
            });
        });
      .field.plej
        = f.select :trained_in, options_for_select(Player.trained_ins.map { |key, value| [key.humanize, key] }), {prompt: "Choose one of them: ..."}, class: "form-control"
      .actions.new
        = f.submit "Submit", class:"baczek"
        = link_to 'Back', players_path, class:"baczek"
